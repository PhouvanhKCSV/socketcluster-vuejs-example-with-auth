div.row
	div.col-md-6.col-md-offset-3
		div.panel.panel-primary
			div.panel-heading
				h4 Login Page
			div.panel-body
				form.form.form-horizontal(action="#!/session/create")
					div.form-group
						label.col-md-2.control-label Email
						div.col-md-9
							input.form-control(v-model="email",type="email",placeholder="Email used to create account")
					div.form-group
						label.col-md-2.control-label Password
						div.col-md-9
							input.form-control(v-model="password",type="password")
					hr
					div.form-group
						div.col-md-2
							button.btn.btn-md.btn-success.pull-right(type="button",@click="login") Login
						div.col-md-7
						div.col-md-2
							a.btn.btn-md.btn-info.pull-left(type="button",href="#!/users/create") Create Account